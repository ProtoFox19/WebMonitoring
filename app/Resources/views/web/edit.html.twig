{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="newWeb col-md-6 col-sm-8 col-12">
            <h1>Edit Web</h1>
            {{ form_start(editWebForm) }}
            {{ form_row(editWebForm.name,{
                'label_attr': {'class': 'newFormLabel'}
            }) }}

            {{ form_row(editWebForm.domain,{
                'label_attr': {'class': 'newFormLabel'}
            }) }}

            {{ form_row(editWebForm.active,{
                'label_attr': {'class': 'newFormLabel'}
            }) }}

            {# {{ form_widget(editWebForm) }}#}
            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(editWebForm) }}
        </div>
    </div>

{% endblock %}