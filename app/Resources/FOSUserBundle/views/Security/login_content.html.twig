{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="card login">
    <div class="card-header">
        <img src="{{ asset('images/PM_Logo.svg') }}" alt="Logo" width="300">
    </div>
    <div class="card-body">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" required="required" />
            </div>

            {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
                <input type="password" id="password" class="form-control" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required" />
            </div>

            <div class="input-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <input type="submit" id="_submit" class="btn btn-primary" name="_submit" value="{{ 'security.login.submit'|trans }}" />

        </form>
    </div>
</div>

