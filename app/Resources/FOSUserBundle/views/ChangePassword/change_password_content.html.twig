{% trans_default_domain 'FOSUserBundle' %}

<h1>Change Password</h1>

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
  {# {{ form_widget(form) }} #}
<div class="form">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-unlock" aria-hidden="true"></i></span>
        {{ form_widget(form.current_password,{
            'attr': {'class': 'form-control', 'placeholder': 'Current Password'}
        }) }}
    </div>
    <div class="formError">
        {{ form_errors(form.current_password) }}
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
        {{ form_widget(form.plainPassword.first,{
            'attr': {'class': 'form-control', 'placeholder': 'Password'}
        }) }}
    </div>
    <div class="formError">
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
        {{ form_widget(form.plainPassword.second,{
            'attr': {'class': 'form-control', 'placeholder': 'Repeat Password'}
        }) }}
    </div>
    <div class="formError">
        {{ form_errors(form.plainPassword.second) }}
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}" />
    </div>
</div>
{{ form_end(form) }}